pipeline {
    agent {
        label 'INFRA'
    }

    stages {
        stage('git checkout') {
            steps {
                git url: 'https://github.com/divyarekulapally/infra_repo.git',
                    branch: 'main'
            }
        }

        stage('terraform init') {
            steps {
                dir('tffiles') {
                    sh 'terraform init'
                }
            }
        }

        stage('terraform validate') {
            steps {
                dir('tffiles') {
                    sh 'terraform validate'
                }
            }
        }

        stage('terraform format') {
            steps {
                dir('tffiles') {
                    sh 'terraform fmt'
                }
            }
        }

        stage('infra scan') {
            steps {
                dir('tffiles') {
                    sh 'tfsec --soft-fail .'
                }
            }
        }

        stage('lint') {
            steps {
                dir('tffiles') {
                    sh 'tflint'
                }
            }
        }

        stage('terraform plan') {
            steps {
                dir('tffiles') {
                    withCredentials([[
                        $class: 'AmazonWebServicesCredentialsBinding',
                        credentialsId: 'aws_ids'
                    ]]) {
                        sh 'terraform plan'
                    }
                }
            }
        }

        stage('terraform apply') {
            steps {
                dir('tffiles') {
                    withCredentials([[
                        $class: 'AmazonWebServicesCredentialsBinding',
                        credentialsId: 'aws_ids'
                    ]]) {
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
    }
}
